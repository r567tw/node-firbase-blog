<% extend('./layouts/layout') %>

<div class="row my-4 justify-content-center">
  <div class="col-md-9">
    <% for(article in articles){ %>

    <div class="card mb-3">
      <div class="card-body">
        <a href="/post/<%-articles[article].id%>">
          <h2 class="text-primary"><%-articles[article].title%></h2>
        </a>
        <div class="d-flex flex-row text-secondary small">
          <div class="p-2"><span class="fa fa-clock-o"></span>
            <%= moment(articles[article].createdAt*1000).format('YYYY/MM/DD') %>
          </div>
          <div class="p-2"><i class="fa fa-tag" aria-hidden="true"></i>
            <a href="#" class="text-info">
              <%- categories[articles[article].category].name %>
            </a>
          </div>
        </div>
        <div>
          <%= stringTags(articles[article].content).slice(0,150) %>
          ...
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<%- include('partials/pagination')%>